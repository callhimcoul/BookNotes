<!-- views/show.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<div class="container">
    <h1><%= book.title %></h1>

    <% if (book.cover_id) { %>
        <img src="https://covers.openlibrary.org/b/id/<%= book.cover_id %>-L.jpg" alt="Обложка <%= book.title %>" class="book-cover-large">
    <% } else { %>
        <img src="/images/default-cover.jpg" alt="Без обложки" class="book-cover-large">
    <% } %>

    <div class="book-details">
        <p><strong>Автор:</strong> <%= book.author %></p>
        <p><strong>ISBN:</strong> <%= book.isbn || 'Не указан' %></p>
        <p><strong>Рейтинг:</strong> <%= book.rating %>/5</p>
        <p><strong>Описание:</strong> <%= book.description || 'Нет описания' %></p>
    </div>

    <div class="actions">
        <a href="/books/<%= book.id %>/edit" class="edit-button">Редактировать</a>
        <form action="/books/<%= book.id %>?_method=DELETE" method="POST" class="delete-form" onsubmit="return confirm('Вы уверены, что хотите удалить эту книгу?');">
            <button type="submit" class="delete-button">Удалить</button>
        </form>
    </div>

    <br>
    <a href="/" class="back-link">Вернуться на главную</a>
</div>
</body>
</html>
